<launch>
  <arg name="visualize" default="true"/>
  <arg name="obstacle_array" default="false"/>

  <node pkg="ars_40x" exec="ars_40x_ros" name="ars_40x_ros" output="screen">
    <!--<param name="frame_id" value="radar_link"/>-->
  </node>

  <group if="$(arg visualize)">
    <node pkg="ars_40x" exec="ars_40x_rviz" name="ars_40x_rviz"/>
    <node pkg="rviz" exec="rviz" name="rviz" args="-d $(find ars_40x)/rviz_cfg/ars_40x.rviz"/>
  </group>

  <group if="$(arg obstacle_array)">
    <node pkg="ars_40x" exec="ars_40x_obstacle_array" name="ars_40x_obstacle_array">
      <!--<remap from="obstacles" to="/move_base/TebLocalPlannerROS/obstacles"/>-->
    </node>
  </group>
</launch>